+/**
+ * @file
+ * TIFF parser
+ */
+
+#include "libavutil/bswap.h"
+#include "libavutil/common.h"
+
+#include "parser.h"
+
+typedef struct TIFFParseContext {
+    ParseContext pc;
+} TIFFParseContext;
+
+static int tiff_parse(AVCodecParserContext *s, AVCodecContext *avctx,
+                     const uint8_t **poutbuf, int *poutbuf_size,
+                     const uint8_t *buf, int buf_size)
+{
+    av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse was invoked\n");
+    TIFFParseContext *d = s->priv_data;
+    uint32_t state = d->pc.state;
+    int next = END_NOT_FOUND;
+
+    s->pict_type = AV_PICTURE_TYPE_I;
+    *poutbuf_size = 0;
+
+    if (buf_size == 0) {
+        av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: buf_size == 0\n");
+        next = 0;
+    }
+
+    av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: state = %d\n", state);
+    av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: buf_size = %d\n", buf_size);
+    av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: flags = %d\n", s->flags);
+
+    if (s->flags & PARSER_FLAG_FETCHED_OFFSET) {
+        av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: PARSER_FLAG_FETCHED_OFFSET\n");
+        s->flags &= ~PARSER_FLAG_FETCHED_OFFSET;
+        next = buf_size;
+    }
+
+    if (s->flags & PARSER_FLAG_COMPLETE_FRAMES) {
+        av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: PARSER_FLAG_COMPLETE_FRAMES\n");
+        av_log(NULL, AV_LOG_DEBUG, "DeweyVision: next is %d\n", next);
+        av_log(NULL, AV_LOG_DEBUG, "DeweyVision: buf_size is %d\n", buf_size);
+        next = buf_size;
+    }
+
+    *poutbuf      = buf;
+    *poutbuf_size = buf_size;
+
+    av_log(NULL, AV_LOG_DEBUG, "DeweyVision: tiff_parse: returning next = %d\n", next);
+    return next;
+}
+
+const AVCodecParser ff_tif_parser = {
+    .codec_ids      = { AV_CODEC_ID_TIFF },
+    .priv_data_size = sizeof(TIFFParseContext),
+    .parser_parse   = tiff_parse,
+    .parser_close   = ff_parse_close,
+};
